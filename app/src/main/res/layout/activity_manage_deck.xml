<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/viewDeckButton"
        android:layout_width="128dp"
        android:layout_height="46dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="168dp"
        android:onClick="viewCards"
        android:text="View Cards"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentDeckName"
        android:layout_width="335dp"
        android:layout_height="100dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="55dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/deckUpdate"
        android:layout_width="344dp"
        android:layout_height="473dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="317dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/deckNameUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Change Deck Name..."
            android:visibility="visible" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/updateDeckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="400dp"
        android:onClick="updateDeck"
        android:text="Update Name"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteDeckButton"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="516dp"
        android:onClick="deleteDeck"
        android:text="Delete Deck"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>